page {
  height: 100%; }

.banner {
  height: 40%; }

.swiper {
  height: 100%; }

.slide-image {
  display: block;
  margin: auto;
  width: 60%;
  height: 100%; }

.content {
  display: flex;
  flex-direction: column;
  font-size: 14px;
  padding-left: 10px;
  color: #555; }
  .content text {
    padding: 5px 0; }
  .content .prices {
    font-size: 18px;
    color: #f60004; }
  .content .name {
    font-size: 18px;
    color: #333;
    padding: 10px 0 15px 0; }
  .content .kc, .content .count, .content .ts {
    font-size: 14px;
    color: #333; }
  .content .tsnr {
    color: #999; }
  .content .bt {
    padding: 10px 0;
    display: flex; }
    .content .bt button {
      margin: 0; }
    .content .bt input {
      margin: 0;
      width: 40px;
      text-align: center;
      border: 1px solid #eee;
      font-size: 16px;
      height: 28px; }

.goods_img {
  width: 100%;
  height: 100%; }
  .goods_img .goods_tit {
    background: #eee;
    padding: 5px 10px;
    border-top: 1px solid #ddd;
    color: #de4943;
    font-size: 16px; }
  .goods_img image {
    display: block;
    width: 100%; }
  .goods_img .img3 {
    height: 70%; }
  .goods_img .img5 {
    height: 30%; }

.section {
  height: 92%; }

.bottom_bar {
  height: 8%;
  width: 100%;
  text-align: center;
  background-color: #eee;
  display: flex;
  justify-content: flex-end; }
  .bottom_bar .bar {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 35%;
    height: 100%;
    background: #FC5A58;
    color: #fff; }
